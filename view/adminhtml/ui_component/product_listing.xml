<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="regenerate_url">
                <settings>
                    <confirm>
                        <message translate="true">Remember that all old URLs related to selected products (including 301 redirects) will be removed. This operation may take some time depending on amount of products selected.</message>
                        <title translate="true">Regenerate URLs</title>
                    </confirm>
                    <url path="urlregeneration/product/massRegenerate"/>
                    <type>regenerate</type>
                    <label translate="true">Regenerate URLs</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>